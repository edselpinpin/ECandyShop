@model Product
@{ 
    string title = "Product Manager";

    ViewBag.Title = title;

}


<h1>@ViewBag.Title</h1>



<form asp-controller="Product" asp-action="Update" method="Post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CategoryID">CategoryID</label>
        <select asp-for="CategoryID" asp-items="@(new SelectList(ViewBag.Categories,"CategoryID","Name",Model.CategoryID.ToString()))" class="form-control">Category</select>
    </div>

    <div class="form-group">
        <label asp-for="Code">Code</label>
        <input asp-for="Code" class="form-control" />

    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />

    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />

    </div>

    <input type="hidden" asp-for="ProductID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Category" as-action="List" class="btn btn-primary">Cancel</a>


</form>
