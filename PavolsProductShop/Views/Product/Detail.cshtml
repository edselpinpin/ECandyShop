@model Product
@{ 
    ViewBag.Titlle = "Product Detail";

}

<h1>
    Product Detail
</h1>
<div class="row">
    <div class="col-sm-4">
        <img src ="~/Images/@ViewBag.ImageFileName" alt="@Model.Name" class="img-fluid center-block" />
    </div>
    <div class="col-sm-8">
        <h2>@Model.Name</h2>
        <h3>@ViewBag.CategoryName</h3>
        <table class="table table-bordered table-striped">
          <tr>
               <td>List Price</td>
               <td>@Model.Price.ToString("C")</td>
          </tr>
          <tr>
                <td>Discount Percent</td>
                <td>@Model.DiscountPercent.ToString("P0")</td>
          </tr>
         <tr>
             <td>Your Price:</td>
             <td>@Model.DiscountPrice.ToString("C")</td>
              (You saved @Model.DiscoutAmount.ToString("C")
         </tr>
        </table>

    </div>
</div>
<a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Home</a>