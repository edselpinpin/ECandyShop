@model ProductListViewModel
@{
        ViewBag.Title = "Product List";
}

<h1>Product List</h1>
<div class="row">
    <div class="col-2 col-sm-3">
        <a asp-controller="Product" asp-action="List" asp-route-id="All" class="list-group-item
         @(Model.CheckActiveCategory("All"))">All</a>
        <div class="list-group active">
            @foreach (Category category in Model.Categories)
            {
                <a asp-controller="Product" asp-action="List" asp-route-id="@category.Name" class="list-group-item
                 @(Model.CheckActiveCategory(category.Name))">@category.Name</a>
            }
        </div>
    </div>

    <div class="col-10 col-sm-9">
        <table class="table table-bordered table-striped  ">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ProductID" asp-route-slug="@product.Slug">View Details</a>
                        </td>
                        <td>
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.ProductID">Add to Cart</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
 </div>
<br/>
<a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Home</a>
