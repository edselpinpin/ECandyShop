@model Basket
@{
    ViewBag.Title = "Delete Category";
}

<h1>Confirm Deletion</h1>
<h3>Are your sure you want to delete ?</h3>

<form asp-controller="Cart" asp-action="Delete" method="post">
    <input type="hidden" asp-for="BasketId" />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Cart" asp-action="Index">Cancel</a>
</form>
